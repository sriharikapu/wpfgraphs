<Window
    x:Class="WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <!--  Graph area occupies 90% of height  -->
            <RowDefinition Height="8*" />
            <!--  Button panel occupies 10% of height  -->
            <RowDefinition Height="1*" />
            <!--  Button panel occupies 10% of height  -->
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!--  Graph area occupies 90% of height  -->
            <ColumnDefinition Width="7*" />
            <!--  Button panel occupies 10% of height  -->
            <ColumnDefinition Width="0.5*" />
            <!--  Button panel occupies 10% of height  -->
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <Grid />


        <!--  OxyPlot Graph  -->

        <oxy:PlotView
            x:Name="plotView"
            Grid.Row="0"
            Grid.Column="0"
            Margin="10,10,10,10"
            Panel.ZIndex="0"
            Background="WhiteSmoke"
            MouseEnter="MyPlot_MouseEnter"
            MouseLeave="MyPlot_MouseLeave" />


        <Grid Grid.Row="1" Grid.Column="0">

            <Rectangle
                Height="8"
                Margin="10,-143,10,30"
                Panel.ZIndex="15"
                Fill="White"
                Opacity="0.9"
                RadiusX="0"
                RadiusY="5" />
        </Grid>

        <!--  Canvas Grid (replacing Button Grid)  -->
        <Canvas
            Grid.Row="2"
            MinWidth="664"
            Margin="10">
            <!--  Left Section: Buttons for Graph Control  -->
            <Button
                Canvas.Left="10"
                Canvas.Top="10"
                Margin="5"
                Click="ResetGraph_Click"
                Content="Reset" />
            <Button
                Canvas.Left="100"
                Canvas.Top="10"
                Margin="5"
                Click="ScrollLeft_Click"
                Content="Scroll Left" />
            <Button
                Canvas.Left="200"
                Canvas.Top="10"
                Margin="5"
                Click="ScrollRight_Click"
                Content="Scroll Right" />
            <Button
                Canvas.Left="300"
                Canvas.Top="10"
                Margin="5"
                Click="ZoomIn_Click"
                Content="Zoom In" />
            <Button
                Canvas.Left="400"
                Canvas.Top="10"
                Margin="5"
                Click="ZoomOut_Click"
                Content="Zoom Out" />
            <Button
                Canvas.Left="500"
                Canvas.Top="10"
                Margin="5"
                Click="FreezeGraph_Click"
                Content="Freeze" />
        </Canvas>
        <!--  Right Section: Mouse Position  -->
        <Grid Grid.Row="0" Grid.Column="1">
            <!--
            <Rectangle
                Width="36"
                Margin="-125,15,0,35"
                Panel.ZIndex="-5"
                Fill="WhiteSmoke"
                RadiusX="5"
                RadiusY="5" />
            -->
        </Grid>
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Canvas.Left="620"
            Canvas.Top="10"
            Margin="0,15,15,15"
            BorderBrush="Transparent"
            BorderThickness="0"
            CornerRadius="0">
            <ListView>
                <ToggleButton
                    x:Name="StaticToggleButton"
                    Checked="StaticToggleButton_Checked"
                    Content="Toggle Static"
                    Unchecked="StaticToggleButton_Unchecked" />
                <TextBlock
                    x:Name="StatusTextBlock"
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="16" />

                <ListBox
                    Height="80"
                    MinWidth="195"
                    MaxWidth="300"
                    Background="LightGray" />
                <ListBox
                    Height="80"
                    MinWidth="195"
                    MaxWidth="300"
                    Background="LightGray" />
                <ListBox
                    Height="80"
                    MinWidth="195"
                    MaxWidth="300"
                    Background="LightGray" />
                <ListBox
                    Height="80"
                    MinWidth="195"
                    MaxWidth="300"
                    Background="LightGray" />
            </ListView>
        </Border>

    </Grid>

</Window>
